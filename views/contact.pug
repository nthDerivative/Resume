extends layout

block content
    //- 
        The contact me via e-mail page
    //
    div.contactme(style=`display: none;`)(id=`contactme`)
        h2(style=`text-align: center; padding: 40px; font-size: 28px; background: none;`)
            | Let's get in touch!
        form(action='/send_message', method='POST' name='contactform' onsubmit='return validate()')
            div.contactname
                input(type='text', name='name', id='contactname', placeholder='Name')
            div.contactcompany
                input(type='text', name='company', id='contactcompany', placeholder='Company')
            div.contactemail
                input(type='text', name='email', id='contactemail',  placeholder='Your email')
            div.contactmessage
                textarea(name='message', id='messagearea', placeholder='Your Message')
            input(type='submit', value='Submit', id='submitmessage')

    script.
        setTimeout(function(){
            $('#contactme').fadeIn("fast");
        },10);